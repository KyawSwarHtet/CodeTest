<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundbird"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_board"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/scoreTextP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player1_score"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/scoreTextP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player2_score"
            android:textSize="30sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:layout_margin="@dimen/spacing"
            android:background="@color/white"
            android:id="@+id/btn00"
            android:layout_width="@dimen/square_size"
            android:layout_height="@dimen/square_size" />
        <Button
            android:layout_margin="@dimen/spacing"
            android:id="@+id/btn01"
            android:background="@color/white"
            android:layout_width="@dimen/square_size"
            android:layout_height="@dimen/square_size" />
        <Button
            android:layout_margin="@dimen/spacing"
            android:id="@+id/btn02"
            android:background="@color/white"
            android:layout_width="@dimen/square_size"
            android:layout_height="@dimen/square_size" />
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:layout_margin="@dimen/spacing"
                android:background="@color/white"
                android:id="@+id/btn10"
                android:layout_width="@dimen/square_size"
                android:layout_height="@dimen/square_size" />
            <Button
                android:layout_margin="@dimen/spacing"
                android:background="@color/white"
                android:id="@+id/btn11"
                android:layout_width="@dimen/square_size"
                android:layout_height="@dimen/square_size" />
            <Button
                android:layout_margin="@dimen/spacing"
                android:background="@color/white"
                android:id="@+id/btn12"
                android:layout_width="@dimen/square_size"
                android:layout_height="@dimen/square_size" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <Button
                    android:layout_margin="@dimen/spacing"
                    android:background="@color/white"
                    android:id="@+id/btn20"
                    android:layout_width="@dimen/square_size"
                    android:layout_height="@dimen/square_size" />
                <Button
                    android:layout_margin="@dimen/spacing"
                    android:background="@color/white"
                    android:id="@+id/btn21"
                    android:layout_width="@dimen/square_size"
                    android:layout_height="@dimen/square_size" />
                <Button
                    android:layout_margin="@dimen/spacing"
                    android:background="@color/white"
                    android:id="@+id/btn22"
                    android:layout_width="@dimen/square_size"
                    android:layout_height="@dimen/square_size" />
            </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnReset"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_game"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</LinearLayout>